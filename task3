from collections import Counter

def слова_одиничні(речення):
    слова = речення.split()
    лічильник_слів = Counter(слова)
    одиничні_слова = [слово for слово, лічильник in лічильник_слів.items() if лічильник == 1]
    return одиничні_слова

введене_речення = input("Введіть речення: ")
унікальні_слова = слова_одиничні(введене_речення)

if унікальні_слова:
    print("Слова, які зустрічаються лише один раз:", унікальні_слова)
else:
    print("Унікальних слів не знайдено")
